<p id="notice"><%= notice %></p>


<% if @recipes.blank? %>
  <h4>There are no recipes containing the term <%= params[:search] %>.</h4>
<% end %>


<h1>Recipes</h1>

<table>
  <thead>
    <tr>
      <th></th>
      <th>Name</th>
      <th>Description</th>
      
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @recipes.each do |recipe| %>
      <tr>
        <td><%= link_to recipe do %>
          <%= image_tag recipe.image_url(:thumb).to_s %>
          <% end %></td>
        <td><%= recipe.name %></td>
        <td><%= recipe.description %></td>
        <% if user_signed_in? %>
        <% if recipe.user==current_user%>
        <td><%= link_to 'Edit', edit_recipe_path(recipe) %></td>
        <% end %>
        <% end %>
      </tr>
    <% end %>
  </tbody>
</table>



