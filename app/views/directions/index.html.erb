<p id="notice"><%= notice %></p>
<h1>Steps in making <%= @recipe.Name %></h1>

<h1>Directions</h1>

<table>
  <thead>
    <tr>
      <th>Steps</th>
      <th colspan="3"></th>
    </tr>
  </thead>
  <tbody>
    <% @directions.each do |direction| %>
      <tr>
        <td><%= direction.Steps %></td>
        <td><%= link_to 'Show', recipe_direction_path(@recipe,direction) %></td>
        <td><%= link_to 'Edit', edit_recipe_direction_path(@recipe,direction) %></td>
        <td><%= link_to 'Destroy', recipe_direction_path(@recipe,direction), method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Direction', new_recipe_direction_path(@recipe) %>
<%= link_to 'Back to Recipes', @recipe %>
